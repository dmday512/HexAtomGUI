            </LinearLayout>
            <LinearLayout
                android:layout_height="@dimen/seek_bar_row_height"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="50sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
